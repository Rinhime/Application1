<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody><% @books.each do |book| %>
      <tr>
        <th><%= book.title %></th>
        <th><%= book.body %></th>
        <th> </th>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <h3>New book</h3>
  <%= form_with model: @book, url: '/', method: :post do |f| %>
  
    <h6>Title</h6>
    <%= f.text_field :title %>
  
    <h6>Body</h6>
    <%= f.text_area :body %>

    <%= f.submit'Create Book' %>
  <% end %>
