<main>
  <div>
      <%= flash[:notice] %>
  </div>

  <div class="book-comment">
    
    <div class="detail-title">
      <h5>Title:</h5>
      <p><%= @book.title %></p>
    </div>
    
    <div class="detail-body">
      <h5>Body:</h5>
      <p><%= @book.body %></p>
    </div>
    
  </div>
  
  <div class="link">
    <div class="detail-link">
      <%= link_to "Edit", edit_book_path(@book.id) %>
    </div>
    <div class="detail-link">
      <p>|</p>
    </div>
    <div class="detail-link">
      <%= link_to "Back", '/books' %>
    </div>
  </div>
  
</main>