<main>
  <div class="text-success">
    <%= flash[:notice] %>
  </div>
  <h1>Editing Book</h1>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

    <div class="edit-title">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>

    <div class="edit-body">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
  
    <%= f.submit 'Update Book' %>
    <div class="link-box">
      <div class="link">
        <%= link_to "Show", book_path %>
      </div>
      <div class="link">
        <p>|</p>
      </div>
      <div class="link">
        <%= link_to "Back", '/books' %>
      </div>
    </div>
  <% end %>
</main>